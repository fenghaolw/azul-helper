{
  "name": "azul-helper-extension",
  "version": "1.0.0",
  "description": "Chrome extension for suggesting optimal moves in Azul board game",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc && NODE_ENV=development vite build --mode development",
    "build:prod": "tsc && vite build --mode production",
    "analyze": "ANALYZE=true npm run build",
    "build:watch": "vite build --watch",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "ci": "npm run check && npm run build"
  },
  "dependencies": {
    "@preact/preset-vite": "^2.10.1",
    "@preact/signals": "^2.0.5",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "preact": "^10.26.7",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/chrome": "^0.0.260",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-preact": "^0.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "fs-extra": "^11.3.0",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.0",
    "terser": "^5.40.0",
    "vite": "^6.3.5"
  }
}
