{
  "name": "azul-helper-extension",
  "version": "1.0.0",
  "description": "Chrome extension for suggesting optimal moves in Azul board game",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "ci": "npm run check && npm run build"
  },
  "dependencies": {
    "@preact/signals": "latest",
    "autoprefixer": "latest",
    "postcss": "latest",
    "preact": "latest",
    "tailwindcss": "^3.4.0",
    "typescript": "latest"
  },
  "devDependencies": {
    "@types/chrome": "latest",
    "@preact/preset-vite": "latest",
    "fs-extra": "latest",
    "vite": "latest",
    "vite-plugin-static-copy": "latest",
    "oxlint": "latest",
    "prettier": "latest"
  }
}