{
  "name": "azul-helper-extension",
  "version": "1.0.0",
  "description": "Chrome extension for suggesting optimal moves in Azul board game",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "oxc build --watch",
    "build": "tsc && oxc build",
    "analyze": "oxc build --analyze",
    "build:watch": "oxc build --watch",
    "type-check": "tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "ci": "npm run check && npm run build"
  },
  "dependencies": {
    "@preact/signals": "^2.0.5",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "preact": "^10.26.7",
    "tailwindcss": "^4.1.9",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "fs-extra": "^11.3.0",
    "oxc": "latest",
    "oxlint": "latest",
    "prettier": "^3.5.3"
  }
}